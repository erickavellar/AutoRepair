@model AutoRepair.Models.ChangeUserViewModel
@{
    ViewData["Title"] = "ChangeUser";
}

<div style="margin-top: 12%; margin-left: 35%">
    <h1>Change User</h1>

    <div class="row">
        <div class="col-md-4 offset-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <br />
                <div class="contact-form-area wow fadeInUp" data-wow-delay="500ms" style="height:850px;">
                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-md-3">
                            <img id="imgpreview" src="~/Dashboard/images/blank.jpg" alt="image" style="width:200px; height:300px; max-width:100%; height:auto" />
                        </div>
                        <div class="col-md-4">
                            <label asp-for="FirstName" class="form-label"><b>Customer Number:</b></label>
                            <label asp-for="FirstName" class="form-label">@ViewBag.idCount</label>
                            <input asp-for="ImageFile" class="form-control" onchange="previewimg(event)" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName">First Name</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastName">Last Name</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Address">Address</label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DistrictId">City</label>
                        <select asp-for="DistrictId" asp-items="Model.Districts" class="form-control selectpicker" />
                        <span asp-validation-for="DistrictId" class="input-group-addon"></span>
                    </div>



                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-primary" />
                        <a asp-action="ChangePassword" class="btn btn-success"><i class="fas fa-pencil-alt"></i> Change Password</a>
                    </div>

                    <div class="text-success">@ViewBag.UserMessage</div>
                    </div>
</form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


<script>
        var previewimg = function (event) {
        var result = document.getElementById("imgpreview");
        result.src = URL.createObjectURL(event.target.files[0]);
    }
</script>
<style>
    .e-mask.e-filled .e-control.e-maskedtextbox {
        height: 54px;
    }

    #datetimepicker {
        height: 54px;
    }
</style>

