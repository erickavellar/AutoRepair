@model AutoRepair.Data.Entities.Service

@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "Details";
}

<div class="content-wrapper" style="color: cornflowerblue; font-style: italic; margin-bottom: 10%; margin-top: 10%; margin-left: 20%">
    <h1>Service Details</h1>
    <hr />
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreationDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreationDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UpdateDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UpdateDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DeactivationDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DeactivationDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CostPrice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CostPrice)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SalePrice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SalePrice)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsActive)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fas fa-pencil-alt"></i> Edit</a>
        <a asp-action="Create" asp-route-id="@Model.Id" class="btn btn-info"><i class="fa fa-save"></i> Add Service</a>
        <a asp-action="Index" class="btn badge-gradient-danger"><i class="fa fa-chevron-left"></i> Back to List</a>
    </div>
</div>
