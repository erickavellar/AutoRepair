@model AutoRepair.Models.ChangeUserViewModel
@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "ChangeUser";
}

<h2 class="col-md-4 offset-md-4" style="color:cornflowerblue; font-style:italic; margin-top:12%">Edit Receptionist</h2>
<br />
<br />
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <br />
            <div class="contact-form-area wow fadeInUp" data-wow-delay="500ms" style="height:850px;">
                <div class="row">
                    <div class="col-md-1"></div>
                    <div class="col-md-3">
                        <img id="imgpreview" src="~/images/blank.jpg" alt="image" style="width:200px; height:300px; max-width:100%; height:auto" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageFile" class="control-label"></label>
                        <input asp-for="ImageFile" class="form-control" type="file" onchange="previewimg(event)" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                        
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName">First Name</label><br />
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastName">Last Name</label><br />
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Address">Address</label><br />
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PhoneNumber">Phone Number</label><br />
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-arrow-up"></i>Update</button>
                        <a asp-action="ChangePassword" class="btn btn-success"><i class="fas fa-pencil-alt"></i> Change Password</a>
                        <a asp-action="Index" class="btn badge-gradient-danger"><i class="fa fa-chevron-left"></i> Back to List</a>
                    </div>
                    </div>
                </div>
                    <div class="text-success">@ViewBag.UserMessage</div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


}

<script>
    var previewimg = function (event) {
        var result = document.getElementById("imgpreview");
        result.src = URL.createObjectURL(event.target.files[0]);
    }
</script>
