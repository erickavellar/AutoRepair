<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0,maximum-scale=1">

    <title>AutoRepair</title>

    <!-- Loading third party fonts -->
    <link href="http://fonts.googleapis.com/css?family=Titillium+Web:300,400,700|" rel="stylesheet" type="text/css">
    <link href="~/WebAplication/fonts/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <!-- Loading main css file -->
    <link rel="stylesheet" href="~/WebAplication/css/style.css">

    <!--[if lt IE 9]>
    <script src="js/ie-support/html5.js"></script>
    <script src="js/ie-support/respond.js"></script>
    <![endif]-->

    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4-4.6.0/jq-3.6.0/dt-1.11.3/b-2.0.1/fc-4.0.0/sc-2.0.5/sb-1.2.2/sp-1.4.0/sl-1.3.3/datatables.min.css" />

    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4-4.6.0/jq-3.6.0/dt-1.11.3/b-2.0.1/fc-4.0.0/sc-2.0.5/sb-1.2.2/sp-1.4.0/sl-1.3.3/datatables.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />

    <!-- Syncfusion Essential JS 2 Styles -->
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/material.css" />

    <!-- Syncfusion Essential JS 2 Scripts -->
    <script src="https://cdn.syncfusion.com/ej2/dist/ej2.min.js"></script>

</head>

<body class="header-collapse">
    <header class="site-header" style="background-color: #1b1b1b ">
        <div class="container" style="width:90%">
            <a id="branding" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/WebAplication/images/logo.png" alt="Company Logo" class="logo">
                <h1 class="site-title">Auto<span>Repair</span></h1>
            </a>

            <nav class="main-navigation">
                <button type="button" class="menu-toggle"><i class="fa fa-bars"></i></button>
                <ul class="menu">
                    <li class="menu-item current-menu-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="menu-item"><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                    <li class="menu-item"><a asp-area="" asp-controller="Home" asp-action="Services">Services</a></li>
                    <li class="menu-item"><a asp-area="" asp-controller="Home" asp-action="Gallery">Gallery</a></li>
                    <li class="menu-item"><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                    @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin") || this.User.IsInRole("Mechanic") || this.User.IsInRole("Receptionist"))
                    {
                        <li class="menu-item"><a asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    }

                    @if (this.User.Identity.IsAuthenticated)
                    {
                        
                        <li class="menu-item"><a asp-area="" asp-controller="Customer" asp-action="Index">Customer</a></li>
                        <li class="menu-item"><a asp-area="" asp-controller="Home" asp-action="Vehicle">Vehicle</a></li>
                        <li class="menu-item"><a asp-area="" asp-controller="Home" asp-action="Schedule">Schedule</a></li>
                        <li class="menu-item"><a asp-area="" asp-controller="Account" asp-action="ChangeUser">@this.User.Identity.Name</a></li>
                        <li class="menu-item"><a asp-area="" asp-controller="Account" asp-action="Logout">Logout</a></li>
                    }
                    else
                    {
                        <li class="menu-item"><a asp-area="" asp-controller="Account" asp-action="Login">Login</a></li>
                    }
                </ul>
            </nav>
            <nav class="mobile-navigation"></nav>
        </div>
    </header> <!-- .site-header -->


    @RenderBody()

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!-- Syncfusion Essential JS 2 ScriptManager -->
    <ejs-scripts></ejs-scripts>

</body>

</html>
