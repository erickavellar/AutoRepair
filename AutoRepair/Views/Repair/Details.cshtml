@model AutoRepair.Data.Entities.Repair
@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "Details";
}

<div class="content-wrapper" style="color: cornflowerblue; font-style: italic; margin-bottom: 10%; margin-top: 10%; margin-left: 20%">
    <h1>Repair Detail</h1>
    <hr />
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Licenseplate of Vehicle
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Schedule.Vehicle)
            </dd>
            <dt class="col-sm-2">
                Service
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Schedule.Service)
            </dd>
            <dt class="col-sm-2">
                Repair Date
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Schedule.ScheduleDateHeld)
            </dd>
            <dt class="col-sm-2">
                Mechanic
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MechanicId)
            </dd>
            <dt class="col-sm-2">
                Deactivation Date
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DesactivationDate)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fas fa-pencil-alt"></i> Edit</a>
        <a asp-action="Create" asp-route-id="@Model.Id" class="btn btn-info"><i class="fa fa-save"></i> Update</a>
        <a asp-action="Index" class="btn badge-gradient-danger"><i class="fa fa-chevron-left"></i> Back to List</a>
    </div>
</div>

