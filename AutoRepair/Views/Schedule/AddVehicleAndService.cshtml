@model AutoRepair.Models.AddItemViewModel
@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "AddVehicleAndService";
}

<h2 class="col-md-4 offset-md-4" style="color:cornflowerblue; font-style:italic; margin-top:20%">Add Vehicle and Service</h2>
<br />
<br />
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form asp-action="AddVehicleAndService">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="VehicleId" class="control-label"></label>
                <select asp-for="VehicleId" asp-items="Model.Vehicles" class="form-control" style="color:black"></select>
                <span asp-validation-for="VehicleId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ServiceId" class="control-label"></label>
                <select asp-for="ServiceId" asp-items="Model.Services" class="form-control" style="color:black"></select>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa fa-save " ></i> Submit</button>
                <a asp-action="Index" class="btn btn-success"><i class="fa fa-chevron-left " ></i> Back to List</a>
            </div>
        </form>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

